;; Recursive factorial calculation.

#import "common"

;; define FACT
FACT := Y λfact.λn.(
        (IF (ISZERO n)              ;; if n == 0:
            1                       ;;    return 1
            (* n (fact (- n 1)))))  ;; return n * fact(n - 1)

;; test FACT
FACT 1  ;; => 1
FACT 2  ;; => 2
FACT 3  ;; => 6
